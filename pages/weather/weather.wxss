/* pages/weather/weather.wxss */
.top_header {
  height: 40px;
  width: 100%;
  display: flex;
}
/*城市信息*/
.city {
  height: 100%;
  width: 50%;
  display: flex;
  justify-content: flex-start;
  align-items: center;
  padding-left: 20px;
}

.time {
  height: 100%;
  width: 120px;
  display: flex; 
  justify-content: flex-end;
  align-items: center;
  padding-right: 20px;
}

picker {
  height: 100%;
  width: 97px;
  display: flex; 
  justify-content: flex-start;
  align-items: center;
}
.city_icon {
  width: 23px;
  height: 23px;
  margin-right: 5px;
  margin-top: -3px;
}

.time_icon {
  width: 23px;
  height: 23px;
  margin-right: 5px;
  margin-top: -2px;
}

.top_header text {
  font-size: 13px;
  color: #eee;
}

/*天气预报*/
.weather {
  overflow: hidden;
  color:#eee;
  padding: 0%;
  width: 100%;
}
.weather .display {
  display: flex;
  justify-content: center;
}
.weather .section {
  float: left;
  width: 130rpx;
  height: 130rpx;
  /* display: block;  */
  margin: auto 10%;
  margin-top: 3%;
}
.weather .aside {
  float: right;
  width:40%;
  margin-top: 3%;
  font-size: 12px;
}
.weather .aside .temperature {
  font-size: 36px;
  display: block;
}
.weather .day {
  display: flex;
  width: 100%;
  height: 30px;
  font-size: 12px;
  text-align: center; 
  justify-content: center;
  align-items: center;
  margin-top: 1%;

}
.weather .description {
  display: flex;
  width: 100%;
  height: 30px;
  font-size: 12px;
  text-align: center; 
  justify-content: center;
  align-items: center;
}

.weather .other {
  clear:both;
  padding-top: 3%;
  padding-bottom: 3%;
  display: flex;
}
.weather .other view {
  flex:1;
  text-align: center;
}
.weather .other .border_r {
  border-right: solid 1px #eee;
}
.weather .other .title {
  font-size: 14px;
  color: #eee; 
}
.weather .other .info {
  display: block;
  padding-top: 5%;
  padding-left: 3%;
  padding-right: 3%;
}

/*生活指数*/
.suggestion {
  margin-top: 0%;
  width: 100%;
}
.suggestion .title {
  display: block;
  padding: 3% 5%; 
  background: rgb(140, 110, 158); 
  color: #fff;
}
.suggestion .list { 
  display: flex; 
  font-size: 12px; 
  margin-top: 1px; 
}
.suggestion .list_l { 
  flex: 1; 
  text-align: center; 
  background: rgb(140, 110, 160); 
  color: #eee; 
  padding: 8px;
}
.suggestion .list_l image { 
  width:30px; 
  height: 30px; 
  display: block; 
  margin: 0 auto;
}
.suggestion .list_r { 
  flex: 4; 
  background: #eee; 
  padding: 8px; 
  color: #566;
}
.suggestion .list_t { 
  font-size: 14px;
  display: block;
  margin-bottom: 5px;
  color: #333;
}